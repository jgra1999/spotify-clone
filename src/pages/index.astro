---
import Layout from '../layouts/Layout.astro';
import { playlists } from '@/libs/data';
import PlaylistItemCard from '@/components/playlists/playlist-item-card.astro'
import Greetings from '@/components/greetings.svelte';
---

<Layout title="Spotify Clone">
	<div id="playlist-container" class="relative transition-all duration-100 bg-green-600">
		<!-- Page Header -->

		<div class="relative z-10 pt-10 px-6">
			<Greetings />

			<div class="flex flex-wrap mt-6 gap-4">
				{playlists.map(playlist => <PlaylistItemCard playlist={playlist} />)}
			</div>

			<div class="absolute inset-0 bg-gradient-to-t from-darkGray via-zinc-900/80" ></div>
		</div>
	</div>
</Layout>

